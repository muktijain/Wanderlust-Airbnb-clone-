<% layout('/layouts/boilerplate') -%>

<script>
  window.mapToken = "<%= process.env.MAP_TOKEN %>";
</script>

<div class="container mt-3">

  
  <!-- Listing Title -->
  <div class="row mb-4">
    <div class="col text-center">
      <h2 class="fw-bold"><u><%= listing.title %></u></h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <!-- Image Card -->
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card listing-card shadow-sm mb-4 rounded-3">
        <img src="<%= listing.image.url %>" 
             class="card-img-top rounded-top top show-img shadow-sm p-3 mb-5 bg-body-tertiary rounded" 
             alt="<%= listing.title %>" 
             style="height: 25rem; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title"><b>Listing Details :</b></h5>
          <p class="card-text">
           <i>Owned By : <%= listing.owner.username %></i> 
            <hr />
            <%= listing.description %>
          </p>
          <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><strong>Price:</strong> &#x20B9; <%= listing.price.toLocaleString("en-IN") %> / night</li>
            <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
            <li class="list-group-item"><strong>Country:</strong> <%= listing.country %></li>
          </ul>
          <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="btns">
            <div class="d-flex justify-content-between">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">
                Edit
              </a>
              &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger del-btn">Delete</button>
              </form>
            </div>
          <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- review section -->
 <% if(currUser) { %>
  <hr />
  <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" 
      method="POST" 
      novalidate class="needs-validation">
      
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-slot">
        <input 
          type="radio" 
          id="no-rate" 
          class="input-no-rate" 
          name="review[rating]" 
          value="1" 
          checked 
          aria-label="No rating." />
        <input 
          type="radio" 
          id="first-rate1" 
          name="review[rating]" 
          value="1" />
        <label for="first-rate1" title="Terrible">1 star</label> 
        <input 
          type="radio" 
          id="first-rate2" 
          name="review[rating]" 
          value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>    
        <input 
          type="radio" 
          id="first-rate3" 
          name="review[rating]" 
          value="3" />
        <label for="first-rate3" title="Average">3 stars</label>  
        <input 
          type="radio" 
          id="first-rate4" 
          name="review[rating]" 
          value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input 
          type="radio" 
          id="first-rate5" 
          name="review[rating]" 
          value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>

      </fieldset>
    </div>      

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" 
            id="comment" 
            cols="30" rows="5" 
            class="form-control"
            required ></textarea>
          <div class="invalid-feedback">
            Please add some comments.
          </div>
        </div>

        <button class="btn btn-outline-danger">Submit</button>

      </form>
  </div>
<% } %>

<br />
<% if (listing.reviews.length > 0) { %>
  <div class="row m-3">
    <p><b>All Reviews</b></p>
      <% for(let review of listing.reviews) { %>
      <div class="card col-3 ms-3 mb-3 ">
        <div class="card-body">
          <h5 class="card-title"><i>@ <%= review.author ? review.author.username : "Deleted User" %></i></h5>
          <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
          <p class="card-text"><%= review.comment %> </p>
          <% if(currUser && review.author.equals(currUser._id)) { %>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE" 
              method="POST" 
              class="mb-3">
              <button class="btn btn-danger del-btn">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
<% } %>
<hr />
  <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>

  <script src="/js/map.js"></script>
